{
  "$id": "user",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "unique": true
    },
    "email": {
      "type": "string",
      "unique": true
    },
    "password": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": ["user", "admin", "company"]
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "createdAt": {
      "type": "string",
      "default": "now"
    },
    "updatedAt": {
      "type": "string",
      "default": "now"
    }
  },
  "required": ["username", "email", "password", "role", "firstName", "lastName"]
}